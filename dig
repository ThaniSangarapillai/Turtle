while true do
    turtle.turnRight()
    while true do
        if turtle.detect() == true then
            turtle.dig()
            turtle.forward()
        end
        turtle.turnLeft()
        if turtle.detect() ~= true then
            if turtle.detect() ~= true then
                break
        end
        turtle.dig()
        turtle.forward()
        turtle.turnRight()
    end
    
    turtle.digDown()
    turtle.down()
end
