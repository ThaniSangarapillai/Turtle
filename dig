while true do
    turtle.turnRight()
    while true do
        if turtle.detect() == true then
            turtle.dig()
            turtle.forward()
        end
        turtle.turnLeft()
        turtle.turnLeft()
        if turtle.detect() == false then
            turtle.turnRight()
            turtle.back()
            turtle.turnLeft()
            if turtle.detect() == false then
                turtle.turnRight()
                break
            end
        end
        turtle.dig()
        turtle.forward()
        turtle.turnRight()
    end
    
    turtle.digDown()
    turtle.down()
end
